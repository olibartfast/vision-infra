{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "inherits": "base",
      "displayName": "Debug Build",
      "description": "Debug build with sanitizers and warnings enabled",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "ON",
        "ENABLE_WARNINGS": "ON",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "displayName": "Release Build",
      "description": "Optimized release build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_SANITIZERS": "OFF",
        "ENABLE_WARNINGS": "ON",
        "BUILD_TESTING": "OFF"
      }
    },
    {
      "name": "relwithdebinfo",
      "inherits": "base",
      "displayName": "Release with Debug Info",
      "description": "Release build with debug information",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "ENABLE_SANITIZERS": "OFF",
        "ENABLE_WARNINGS": "ON",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "ci",
      "inherits": "base",
      "displayName": "CI Build",
      "description": "Configuration for continuous integration",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_SANITIZERS": "ON",
        "ENABLE_WARNINGS": "ON",
        "BUILD_TESTING": "ON",
        "BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "windows-debug",
      "inherits": "debug",
      "displayName": "Windows Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "ENABLE_SANITIZERS": "OFF"
      }
    },
    {
      "name": "windows-release",
      "inherits": "release",
      "displayName": "Windows Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "macos-debug",
      "inherits": "debug",
      "displayName": "macOS Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-release",
      "inherits": "release",
      "displayName": "macOS Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "linux-debug",
      "inherits": "debug",
      "displayName": "Linux Debug",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "inherits": "release",
      "displayName": "Linux Release",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Build Debug",
      "description": "Build debug configuration"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "displayName": "Build Release",
      "description": "Build release configuration"
    },
    {
      "name": "relwithdebinfo",
      "configurePreset": "relwithdebinfo",
      "displayName": "Build RelWithDebInfo",
      "description": "Build release with debug info"
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "displayName": "Build CI",
      "description": "Build for continuous integration"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows-debug",
      "displayName": "Build Windows Debug"
    },
    {
      "name": "windows-release", 
      "configurePreset": "windows-release",
      "displayName": "Build Windows Release"
    },
    {
      "name": "macos-debug",
      "configurePreset": "macos-debug", 
      "displayName": "Build macOS Debug"
    },
    {
      "name": "macos-release",
      "configurePreset": "macos-release",
      "displayName": "Build macOS Release"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "displayName": "Build Linux Debug" 
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release",
      "displayName": "Build Linux Release"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Test Debug",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "release",
      "configurePreset": "release",
      "displayName": "Test Release",
      "output": {"outputOnFailure": true},
      "execution": {"noTestsAction": "error"}
    },
    {
      "name": "ci",
      "configurePreset": "ci",
      "displayName": "Test CI",
      "output": {"outputOnFailure": true, "verbosity": "verbose"},
      "execution": {"noTestsAction": "error"}
    }
  ]
}